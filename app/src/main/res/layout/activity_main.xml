<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#ffffff"
android:orientation="vertical"
tools:context=".app.MainActivity">
<FrameLayout
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1" />


<RadioGroup
    android:id="@+id/rg_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@drawable/corner_bt"
    android:orientation="horizontal">

    <RadioButton
        android:id="@+id/rb_movie"
        style="@style/MainButtonStyle"
        android:drawableTop="@drawable/movie_button_selector"
        android:text="电影" />

    <RadioButton
        android:id="@+id/rb_cinema"
        style="@style/MainButtonStyle"
        android:drawableTop="@drawable/cinema_button_selector"
        android:text="影院" />

    <RadioButton
        android:id="@+id/rb_community"
        style="@style/MainButtonStyle"
        android:drawableTop="@drawable/community_button_selector"
        android:paddingTop="10dp"
        android:text="发现" />

    <RadioButton
        android:id="@+id/rb_mine"
        style="@style/MainButtonStyle"
        android:drawableTop="@drawable/mine_button_selector"
        android:text="我的" />

</RadioGroup>


</LinearLayout>