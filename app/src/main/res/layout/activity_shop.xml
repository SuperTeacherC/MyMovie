<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_shop_banner"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:scaleType="fitXY"
            android:background="#000"/>
            <ImageView
                android:id="@+id/tv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/je"
                android:layout_margin="8dp"/>
            <ImageView
                android:id="@+id/tv_search"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="8dp"
                android:src="@drawable/jo"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <GridView
            android:id="@+id/gridview_channal"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:numColumns="5"></GridView>

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="#999" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            android:text="每月特价"
            android:textColor="#000" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eee" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--*******************left_end*************************-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="你的名字"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/tv_dsc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我们终会相聚"
                    android:textColor="#999"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/xiaofei" />


            </LinearLayout>
            <!--*******************left_end*************************-->
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#eee" />

            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_name2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="XXXXXXX的城堡"
                            android:textColor="#000"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv_dsc2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_name2"
                            android:text="XXXXXXX的城堡"
                            android:textColor="#999"
                            android:textSize="15sp" />

                        <ImageView
                            android:id="@+id/iv_shop2"
                            android:layout_width="60dp"
                            android:layout_height="70dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="5dp"
                            android:src="@drawable/xiaofei" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#eee" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical">

                        <TextView

                            android:id="@+id/tv_name3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="XXXXXXX的城堡"
                            android:textColor="#000"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv_dsc3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_name3"
                            android:text="XXXXXXX的城堡"
                            android:textColor="#999"
                            android:textSize="15sp" />

                        <ImageView
                            android:id="@+id/iv_shop3"
                            android:layout_width="60dp"
                            android:layout_height="70dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="5dp"
                            android:src="@drawable/xiaofei" />
                    </RelativeLayout>


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eee" />

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="#999" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            android:text="猜您喜欢"
            android:textColor="#000" />
    <GridView
        android:id="@+id/gridview_item"
        android:layout_width="match_parent"
        android:layout_height="900dp"
        android:numColumns="2"/>

    </LinearLayout>
</ScrollView>