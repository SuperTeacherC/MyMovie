<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_hot_movies"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_margin="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/xiaofei" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/iv_hot_movies"
            android:layout_alignTop="@id/iv_hot_movies"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/play" />

        <LinearLayout
            android:id="@+id/hot_item_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_hot_movies"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/movie_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_hot_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="电影名称"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/imax_2d"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/ru"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/hot_3d"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/rv"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/imax_3d"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/rw"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_hot_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="观众 "
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_hot_user_fen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9.0 "
                        android:textColor="#ffcc00"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_hot_vip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="| 专业 "
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_hot_vip_fen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9.0"
                        android:textColor="#ffcc00"
                        android:textSize="15sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_hot_scm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="电影描述"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_hot_showinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="播放场次"
                    android:textSize="15dp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="60dp">

            <TextView
                android:id="@+id/tv_hot_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/hot_reply_seletor"
                android:gravity="center"
                android:text="购票"
                android:textColor="@drawable/text_hot_reply_seletor"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_hot_yushou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/hot_yushou_seletor"
                android:gravity="center"
                android:text="预售"
                android:textColor="@drawable/text_hot_yushou_seletor"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/hot_topone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_hot_movies"
            android:layout_marginLeft="60dp"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#eee" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="8dp">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/hot_zixun_shape"
                    android:gravity="center"
                    android:text="专题"
                    android:textColor="#ff6600" />

                <TextView
                    android:id="@+id/hot_topic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="宣传语" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#eee" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/hot_zixun_shape"
                    android:gravity="center"
                    android:text="资讯"
                    android:textColor="#ff6600" />

                <TextView
                    android:id="@+id/hot_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="最新资讯" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#eee" />
</LinearLayout>