<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="12dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_community_movie"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:src="@drawable/xiaofei" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标题概要"
            android:textColor="#000"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_marginTop="65dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_gravity="bottom">

            <TextView
                android:id="@+id/tv_maoyan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:text="猫眼资讯"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_xiaoxi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:text="1"
                android:textColor="#ddd"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_xiaoxi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dp"
                android:layout_toLeftOf="@id/tv_xiaoxi"
                android:src="@drawable/xiaoxi" />

            <TextView
                android:id="@+id/tv_liulan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_toLeftOf="@id/iv_xiaoxi"
                android:text="1"
                android:textColor="#ddd"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_liulan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dp"
                android:layout_toLeftOf="@id/tv_liulan"
                android:src="@drawable/liulan" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>